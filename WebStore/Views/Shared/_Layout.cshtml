<!-- Blue colour scheme instead of green? Although, circuit boards are usually green. -->

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The Tech Store | @ViewBag.Title</title>

    <!-- Bootstrap Font Icon CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    
    @Styles.Render("~/Content/css")

    <style>

        body {
            background-color: #082727;
            color: white;
        }

        .container {
            max-width: 95%;
        }

        .page {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        hr {
            border: 1;
            width: 100%
        }

        .abs-centre {
            position: absolute;
            width: auto;
            left: 50%;
            transform: translateX(-50%);
            text-align: center;
        }

        .text-link {
            text-decoration: none !important;
            color: inherit !important;
        }

            .text-link:hover {
                color: #1e9469 !important;
                text-decoration: none !important;
            }

        .btn-primary {
            background-color: #1e9469;
            border: 1px solid #186e57;
            color: white;
        }

            .btn-primary:hover {
                background-color: #136144;
            }


        /* Debug Border Styles */
        .dbg-1 {
            border: 2.5px solid red !important;
        }

        .dbg-2 {
            border: 2px dashed orange !important;
        }

        .dbg-3 {
            border: 1.5px solid green !important;
        }

        .dbg-4 {
            border: 1px dashed blue !important;
        }

        .dbg-5 {
            border: 1px solid purple !important;
        }


    </style>

</head>


<body>

    @Html.Partial("_NavigationBar")


    <div class="container body-content">

        <div class="alert alert-dark text-center" role="alert" style="margin-bottom:50px">
            This site is a work in progress.
        </div>

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - The Tech Store</p>
        </footer>
    </div>



    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>

        function toggleUserModal() {
            alert('Hello user!');

            var myModal = new bootstrap.Modal(document.getElementById('myModal'));
            myModal.show();
        }

    </script>

    

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>