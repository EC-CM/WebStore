<!-- Blue colour scheme instead of green? Although, circuit boards are usually green. -->

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The Tech Store | @ViewBag.Title</title>

    <!-- Bootstrap Font Icon CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    
    @Styles.Render("~/Content/css")

    <style>

        body {
            background-color: #082727;
            color: white;
        }

        .abs-centre {
            position: absolute;
            width: auto;
            left: 50%;
            transform: translateX(-50%);
            text-align: center;
        }

        text-link {
            text-decoration: none !important;
            color: inherit !important;
        }

    </style>

</head>


<body>

    @Html.Partial("_NavigationBar")


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - The Tech Store</p>
        </footer>
    </div>



    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>

        function toggleUserModal() {
            alert('Hello user!');

            var myModal = new bootstrap.Modal(document.getElementById('myModal'));
            myModal.show();
        }

    </script>

    

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>