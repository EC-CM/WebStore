<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The Tech Store | @ViewBag.Title</title>
</head>
<body>
    <style>
        .navbar-brand.nav-title-link {
            /* color: darkgreen; */ /* Darker colour for "Tech Store" */
        }

        .navbar-nav .nav-link {
            color: #1e9469; /* Lighter colour for other links */
        }
    </style>

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark"> <!--navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark-->
        <div class="container">

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                <img src="@Url.Action("GetImage", "Images", new { image_name = "TechStoreLogo.png", height = 50 })" alt="[ # ]" />
            </a>

            @Html.ActionLink("Tech Store", "Index", "Home", new { area = "" }, new { @class = "navbar-brand nav-title-link" })
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </div>
        </div>


        <a href="#" onclick="alert('Welcome user!')">
            <img src="@Url.Action("GetUserProfileImage", "Images", new { userID = 1 })" class="rounded-circle" alt="User Profile Image" />
        </a>

    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - The Tech Store</p>
        </footer>
    </div>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-eDexs70EO7wkLVW93eKdqG5ElXlFOvYjSmP++BL8PL4m3lq5qEWitMQ6Ir7VbpE" crossorigin="anonymous"></script>


</body>
</html>
